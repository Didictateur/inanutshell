<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk android:minSdkVersion="24" android:targetSdkVersion="34"/>
    
    <!-- Network permissions for Mealie API -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Image permissions pour Android moderne -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Notifications permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:name=".MealieApplication"
        android:label="@string/app_name"
        android:icon="@drawable/appicon"
        android:theme="@style/Theme.InANutshell"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">

        <!-- Main Activity -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Launcher Activity - Entry point -->
        <activity
            android:name=".LauncherActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>

        <!-- Setup Activity -->
        <activity
            android:name=".ui.setup.SetupActivity"
            android:exported="false"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Settings Activity -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity" />

        <!-- Edit Recipe Activity -->
        <activity
            android:name=".ui.edit.EditRecipeActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Tag Selection Activity -->
        <activity
            android:name=".ui.tags.TagSelectionActivity"
            android:exported="false"
            android:parentActivityName=".ui.edit.EditRecipeActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Tool Selection Activity -->
        <activity
            android:name=".ui.tools.ToolSelectionActivity"
            android:exported="false"
            android:parentActivityName=".ui.edit.EditRecipeActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Category Selection Activity -->
        <activity
            android:name=".ui.categories.CategorySelectionActivity"
            android:exported="false"
            android:parentActivityName=".ui.edit.EditRecipeActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Advanced Search Activity -->
        <activity
            android:name=".ui.search.AdvancedSearchActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Recipe Detail Activity -->
        <activity
            android:name=".ui.recipe.RecipeDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Meal Planner Activity -->
        <activity
            android:name=".MealPlannerActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Edit Meal Plan Activity -->
        <activity
            android:name=".EditMealPlanActivity"
            android:exported="false"
            android:parentActivityName=".MealPlannerActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Shopping Lists Activity -->
        <activity
            android:name=".data.shopping.ShoppingListsActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Timers Activity -->
        <activity
            android:name=".TimersActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Edit Timer Activity -->
        <activity
            android:name=".EditTimerActivity"
            android:exported="false"
            android:parentActivityName=".TimersActivity"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Fullscreen Image Activity -->
        <activity
            android:name=".ui.image.FullscreenImageActivity"
            android:exported="false"
            android:theme="@style/Theme.InANutshell.NoActionBar" />

        <!-- Timer Service -->
        <service
            android:name=".TimerService"
            android:exported="false" />

        <!-- File Provider for image handling -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="fr.didictateur.inanutshell.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>

