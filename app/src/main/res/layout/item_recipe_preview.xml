<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- En-tête avec image et titre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/imageViewPreview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_brown" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPreviewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom de la recette"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:layout_marginEnd="4dp"
                        android:alpha="0.6" />

                    <TextView
                        android:id="@+id/textViewPreviewTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 min"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:alpha="0.6"
                        android:layout_marginEnd="16dp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:layout_marginEnd="4dp"
                        android:alpha="0.6" />

                    <TextView
                        android:id="@+id/textViewPreviewServings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 personnes"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:alpha="0.6" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/textViewPreviewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Description de la recette"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:alpha="0.8"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Ingrédients -->
        <TextView
            android:id="@+id/textViewPreviewIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Ingrédients..."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:fontFamily="monospace"
            android:background="?attr/colorSurfaceVariant"
            android:padding="8dp"
            android:maxLines="6"
            android:ellipsize="end" />

        <!-- Actions de prévisualisation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPreviewDetails"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Détails"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPreviewAction"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Importer"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
