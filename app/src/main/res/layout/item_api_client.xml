<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- En-tÃªte avec nom et bouton rÃ©vocation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_client_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom du client"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/text_client_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŸ¢ Actif"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/button_revoke_client"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="RÃ©voquer client" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/text_client_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description du client"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <!-- ID client (tronquÃ©) -->
        <TextView
            android:id="@+id/text_client_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: 12345678..."
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:background="#F5F5F5"
            android:padding="4dp"
            android:layout_marginBottom="8dp" />

        <!-- Permissions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permissions: "
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_client_permissions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lecture recettes, Ã‰criture recettes"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Date de crÃ©ation -->
        <TextView
            android:id="@+id/text_client_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CrÃ©Ã© le 15/12/2023 14:30"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
