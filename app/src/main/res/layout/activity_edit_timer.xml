<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nom de la minuterie -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="@string/edit_timer_hint_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTimerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Titre pour la durée -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/edit_timer_duration"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Sélecteurs de temps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- Heures -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_timer_hours"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <NumberPicker
                        android:id="@+id/npHours"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:theme="@style/NumberPickerStyle" />

                </LinearLayout>

                <!-- Minutes -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_timer_minutes"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <NumberPicker
                        android:id="@+id/npMinutes"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:theme="@style/NumberPickerStyle" />

                </LinearLayout>

                <!-- Secondes -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_timer_seconds"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <NumberPicker
                        android:id="@+id/npSeconds"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:theme="@style/NumberPickerStyle" />

                </LinearLayout>

            </LinearLayout>

            <!-- Minuteries prédéfinies -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/edit_timer_shortcuts"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btn1Min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/edit_timer_1min"
                    android:textSize="12sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/btn3Min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="@string/edit_timer_3min"
                    android:textSize="12sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/btn5Min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/edit_timer_5min"
                    android:textSize="12sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/btn10Min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/edit_timer_10min"
                    android:textSize="12sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/btn15Min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="@string/edit_timer_15min"
                    android:textSize="12sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/btn30Min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/edit_timer_30min"
                    android:textSize="12sp"
                    style="@style/Widget.AppCompat.Button.Borderless" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bouton de sauvegarde -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/edit_timer_save"
        android:textSize="16sp"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Button.Colored" />

</LinearLayout>
