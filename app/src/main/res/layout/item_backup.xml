<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iconProvider"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_cloud"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textBackupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de la sauvegarde"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/textBackupDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="01/01/2024 12:00"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/textBackupSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3 MB"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textBackupProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Drive"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRestore"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_download"
                app:iconSize="20dp"
                android:contentDescription="Restaurer" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_save"
                app:iconSize="20dp"
                android:contentDescription="Télécharger" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="20dp"
                android:contentDescription="Supprimer" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
