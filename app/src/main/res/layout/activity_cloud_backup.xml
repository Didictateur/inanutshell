<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Status Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status de la sauvegarde"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/text_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aucune opération en cours"
                    android:textColor="@color/on_surface_variant" />

                <TextView
                    android:id="@+id/text_current_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provider: Aucun"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/text_last_backup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dernière sauvegarde: Jamais"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/text_backup_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taille: 0 MB"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configuration"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sauvegarde automatique"
                        android:textColor="@color/on_surface" />

                    <Switch
                        android:id="@+id/switch_auto_backup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chiffrement activé"
                        android:textColor="@color/on_surface" />

                    <Switch
                        android:id="@+id/switch_encryption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/button_select_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sélectionner un provider"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/button_create_backup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Créer une sauvegarde"
                style="@style/Widget.Material3.Button"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/button_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paramètres avancés"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Backups List Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sauvegardes disponibles"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_backups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_backup" />

                <TextView
                    android:id="@+id/text_no_backups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aucune sauvegarde disponible"
                    android:textColor="@color/text_hint"
                    android:textAlignment="center"
                    android:padding="32dp"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
