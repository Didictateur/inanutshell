<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- SwipeRefreshLayout for pull-to-refresh -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshFavorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- RecyclerView for favorite recipes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFavorites"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressBarFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Empty state layout -->
        <LinearLayout
            android:id="@+id/layoutEmptyFavorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <!-- Empty state icon -->
            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_favorite_border"
                android:alpha="0.3"
                android:contentDescription="@string/favorites" />

            <!-- Empty state title -->
            <TextView
                android:id="@+id/tvEmptyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Aucun favori"
                android:textAppearance="@style/TextAppearance.InANutshell.Headline"
                android:alpha="0.7"
                android:gravity="center" />

            <!-- Empty state message -->
            <TextView
                android:id="@+id/tvEmptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajoutez des recettes à vos favoris en appuyant sur ♡"
                android:textAppearance="@style/TextAppearance.InANutshell.Body"
                android:alpha="0.6"
                android:gravity="center" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
