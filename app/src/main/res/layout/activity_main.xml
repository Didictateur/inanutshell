<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar en haut -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_bg"
        app:title="In a nutshell"
        app:titleTextColor="@color/toolbar_title">

        <!-- Bouton de recherche dans la toolbar -->
        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Rechercher"
            android:tint="@color/toolbar_title" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Panneau de recherche étendu (caché par défaut) -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/bg_tag_rounded"
        android:padding="16dp">

        <!-- Recherche textuelle -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rechercher par titre ou description..."
                android:inputType="text"
                android:imeOptions="actionNext"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Recherche par ingrédients -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchIngredientEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rechercher par ingrédient..."
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:drawableStart="@android:drawable/ic_menu_sort_alphabetically"
                android:drawablePadding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Filtres par temps -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/maxPrepTimeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Temps prépa. max (min)"
                    android:inputType="number"
                    android:drawableStart="@drawable/ic_clock"
                    android:drawablePadding="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/maxCookTimeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Temps cuisson max (min)"
                    android:inputType="number"
                    android:drawableStart="@drawable/ic_clock"
                    android:drawablePadding="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Filtres par catégories et tags -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/selectCategoriesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Catégories"
                android:drawableStart="@drawable/ic_category"
                android:drawablePadding="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/selectTagsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tags"
                android:drawableStart="@android:drawable/ic_menu_save"
                android:drawablePadding="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Affichage des filtres actifs -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activeFiltersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Boutons d'action rapide -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/clearSearchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Effacer"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/advancedSearchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avancé"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

    <!-- TabLayout Material Design -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:tabTextColor="@color/navigation_text"
        app:tabSelectedTextColor="@color/navigation_text_selected"
        app:tabIconTint="@color/navigation_icon"
        app:tabIconTintMode="src_in"
        app:tabIndicatorColor="@color/primary"
        app:tabMode="fixed"
        app:tabGravity="fill" />

    <!-- Contenu principal avec ViewPager2 pour le swipe -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
